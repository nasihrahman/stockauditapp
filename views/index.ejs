          }
        });
        totalScore += catScore;
        totalPossible += catPossible;
        // Update category badge
        const catBadge = catCard.querySelector('.category-score-badge');
        if (catBadge) {
          catBadge.textContent = `${catScore}/${catPossible} (${catPossible ? Math.round(catScore/catPossible*100) : 0}%)`;

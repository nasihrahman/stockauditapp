    let response = '';
    radios.forEach(r => { if (r.checked) response = r.value; });
    const comment = this.value || '';
    
    timeout = setTimeout(() => {
      saveAnswer(questionId, { questionId, response: response || undefined, comment })
        .catch(err => {
          console.error('Failed to save comment:', err);
        });
    }, 500);
  });
});


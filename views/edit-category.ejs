<body>
  <header class=" text-white p-2 py-3 sticky-top shadow-sm z-3">
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark p-0">
      <!-- Left: Title -->
      <div class="d-flex align-items-center">
        <div class="d-sm-block px-3">
          <h5 class="mb-0 fw-bold">Edit Categories</h5>
        </div>
      </div>

      <!-- Spacer -->
      <div class="flex-grow-1"></div>

      <!-- Mobile Menu -->
      <div class="d-lg-none d-flex align-items-center gap-2 ms-auto">
        <!-- Hamburger Button -->
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <!-- Collapsible Menu -->
      <div class="collapse navbar-collapse " id="navbarMenu">
        <ul class="navbar-nav ms-auto d-flex align-items-center gap-2" id="navButtonGroup">
          <!-- Buttons -->
          <li class="nav-item">
            <a href="/" class="text-white text-decoration-underline small fw-semibold border-0 bg-transparent">Dashboard</a>
          </li>
          <li class="nav-item">
            <a href="/admin?company=<%= companyId %>" class="text-white text-decoration-underline small fw-semibold border-0 bg-transparent">Back to Admin</a>
          </li>
          <% if (role === 'admin') { %>
          <li class="nav-item">
            <a href="/admin/add-user" class="text-white text-decoration-underline small fw-semibold border-0 bg-transparent">Add User</a>
          </li>
          <% } %>
          <li class="nav-item">
            <a href="/auth/login" class="text-white text-decoration-underline small fw-semibold border-0 bg-transparent">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

<main>
  <div class="admin-section">
    <div class="section-header">
      <h2 class="section-title">Edit Categories</h2>
    </div>
    <form id="edit-category-form" method="POST" class="form-group">
      <div class="form-group">
        <label for="category-select">Select Category</label>
        <select id="category-select" name="category" required>
          <option value="">Choose a category...</option>
          <% categories.forEach(function(cat) { %>
            <option value="<%= cat._id %>" data-name="<%= cat.name %>"><%= cat.name %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label for="category-name">Category Name</label>
        <input type="text" id="category-name" name="name" placeholder="Select a category to edit" required>
      </div>
      <button type="submit" class="button-59">Save Changes</button>
    </form>
  </div>

  <div class="admin-section">
    <div class="section-header">
      <h2 class="section-title">Reorder Categories</h2>
    </div>
    <ul id="sortable-categories">
      <% categories.sort((a,b) => (a.position || 0) - (b.position || 0)).forEach((cat, index) => { %>
        <li class="sortable-item" draggable="true" data-id="<%= cat._id %>">
          <div class="position-number">#<%= index + 1 %></div>
          <div class="item-content">
            <%= cat.name %>
          </div>
          <div class="item-actions">
            <button type="button" class="btn-arrow" onclick="moveItem(this, -1)" title="Move Up">‚Üë</button>
            <button type="button" class="btn-arrow" onclick="moveItem(this, 1)" title="Move Down">‚Üì</button>
            <button type="button" class="btn-delete" onclick="deleteCategory('<%= cat._id %>')" title="Delete Category">üóëÔ∏è</button>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
</main>

<style>
  #sortable-categories {
    list-style: none;
    padding: 0;
  }
  .sortable-item {
    display: flex;
    align-items: center;
    background: #fff;
    border: 1px solid #e2e8f0;
    margin-bottom: 8px;
    padding: 10px 15px;
    border-radius: 6px;
    transition: background 0.2s, transform 0.2s;
    cursor: grab;
  }
  .sortable-item.dragging {
    opacity: 0.5;
    background: #f1f5f9;
  }
  .position-number {
    font-weight: bold;
    color: #64748b;
    margin-right: 15px;
    min-width: 30px;
  }
  .item-content {
    flex-grow: 1;
    font-weight: 500;
  }
  .item-actions {
    display: flex;
    gap: 5px;
  }
  .btn-arrow {
    background: #f1f5f9;
    border: 1px solid #cbd5e1;
    border-radius: 4px;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #334155;
    transition: all 0.2s;
  }
  .btn-arrow:hover {
    background: #e2e8f0;
    color: #0f172a;
  }
  .btn-delete {
    background: #fee2e2;
    border: 1px solid #fecaca;
    border-radius: 4px;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #ef4444;
    transition: all 0.2s;
    margin-left: 5px;
  }
  .btn-delete:hover {
    background: #fecaca;
    color: #dc2626;
  }
</style>

<script>
  const list = document.getElementById('sortable-categories');
  let draggedItem = null;

  // Initial order update to ensure numbers are correct
  updatePositions();

  function updatePositions() {
    const items = list.querySelectorAll('.sortable-item');
    const order = [];
    items.forEach((item, index) => {
      item.querySelector('.position-number').textContent = '#' + (index + 1);
      order.push(item.getAttribute('data-id'));
    });
    return order;
  }

  function saveOrder() {
    const order = updatePositions();
    fetch('/admin/category/reorder', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ order })
    }).catch(err => console.error('Error saving order:', err));
  }

  window.deleteCategory = function(catId) {
    if (confirm('Are you sure you want to delete this category? This will also delete all questions associated with it. This action cannot be undone.')) {
      fetch(`/admin/category/${catId}`, {
        method: 'DELETE'
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Category deleted successfully.');
          window.location.reload();
        } else {
          alert(data.message || 'Failed to delete category.');
        }
      })
      .catch(err => {
        console.error('Error deleting category:', err);
        alert('An error occurred while deleting the category.');
      });
    }
  };

  window.moveItem = function(btn, direction) {
    const item = btn.closest('.sortable-item');
    if (direction === -1 && item.previousElementSibling) {
      list.insertBefore(item, item.previousElementSibling);
      saveOrder();
    } else if (direction === 1 && item.nextElementSibling) {
      list.insertBefore(item.nextElementSibling, item);
      saveOrder();
    }
  };

  list.addEventListener('dragstart', e => {
    draggedItem = e.target.closest('.sortable-item');
    if (draggedItem) {
      draggedItem.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
    }
  });

  list.addEventListener('dragend', e => {
    if (draggedItem) {
      draggedItem.classList.remove('dragging');
      draggedItem = null;
      saveOrder();
    }
  });

  list.addEventListener('dragover', e => {
    e.preventDefault();
    const afterElement = getDragAfterElement(list, e.clientY);
    if (draggedItem) {
        if (afterElement == null) {
        list.appendChild(draggedItem);
        } else {
        list.insertBefore(draggedItem, afterElement);
        }
    }
  });

  function getDragAfterElement(container, y) {
    const draggableElements = [...container.querySelectorAll('.sortable-item:not(.dragging)')];

    return draggableElements.reduce((closest, child) => {
      const box = child.getBoundingClientRect();
      const offset = y - box.top - box.height / 2;
      if (offset < 0 && offset > closest.offset) {
        return { offset: offset, element: child };
      } else {
        return closest;
      }
    }, { offset: Number.NEGATIVE_INFINITY }).element;
  }

  const categorySelect = document.getElementById('category-select');
  const categoryNameInput = document.getElementById('category-name');
  const editCategoryForm = document.getElementById('edit-category-form');

  categorySelect.addEventListener('change', function() {
    const selectedOption = this.options[this.selectedIndex];
    if (selectedOption.value) {
      categoryNameInput.value = selectedOption.dataset.name;
      editCategoryForm.action = `/admin/edit-category/${selectedOption.value}`;
    } else {
      categoryNameInput.value = 'Select a category to edit';
      editCategoryForm.action = '';
    }
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
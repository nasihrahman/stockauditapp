<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add User</title>
  <link rel="stylesheet" href="/css/auth.css" />
</head>
<body>
  <div class="card fade-in-up">
    <h2>Add New User</h2>
    <form method="POST" action="/admin/add-user" onsubmit="return checkPasswords()">
      <div class="form-field">
        <input type="text" name="username" placeholder="Username" required />
        <label>Username</label>
      </div>
      <div class="form-field">
        <input type="email" name="email" placeholder="Email" required />
        <label>Email</label>
      </div>
      <div class="form-field">
        <input type="password" name="password" placeholder="Password" id="password" required />
        <label>Password</label>
      </div>
      <div class="form-field">
        <input type="password" placeholder="Confirm Password" id="confirm" required />
        <label>Confirm Password</label>
      </div>
      <div class="form-field">
        <label for="role">Role:</label>
        <select id="role" name="role">
            <option value="user">User</option>
            <option value="admin">Admin</option>
        </select>
      </div>
      <button type="submit">Add User</button>
    </form>
    <% if (error) { %><p class="error"><%= error %></p><% } %>
    <p class="switch"><a href="/">Back to Admin Panel</a></p>
  </div>

  <script>
    function checkPasswords() {
      const p1 = document.getElementById("password").value;
      const p2 = document.getElementById("confirm").value;
      if (p1 !== p2) {
        alert("Passwords do not match!");
        return false;
      }
      return true;
    }
  </script>
</body>
</html>